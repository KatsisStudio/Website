{% extends 'base.html.twig' %}

{% block content %}
    <h1>Katsis</h1>
    <p>
        Katsis is a video game studio focused in delivery open-minded experiences. Whilst many of our projects are <b>N</b>ot <b>S</b>afe <b>F</b>or <b>W</b>ork <br> we do not limit ourselves in exploring further ideas. Feel free to follow our members, and check out or content below!
    </p>
    <h2>Our Work:</h2>
    <div class="flex" id="projects">
    {% for project in projects %}
        <div>
            <h3>{{ project.name }}</h3>
            <p class="description">
                {{ project.description }}
            </p>
            <div class="img-container">
                <img src="data/projects/{{ project.baseFolder }}/{{ project.preview }}"/><br>
            </div>
            {% for d in project.download %}
            <a href="data/projects/{{ project.baseFolder }}/{{d}}">Download</a>
            {% endfor %}
            {% for link in project.links %}
            <a href="{{ link.content }}" target="_blank">{{ link.name }}</a>
            {% endfor %}
            <div class="flex warnings">
                {% for warn in project.contentWarnings %}
                <div class="content-warning">{{ warn }}</div>
                {% endfor %}
            </div>
            <p class="proj-members">
                By {{ project.members | join(', ') }}
            </p>
        </div>
    {% endfor %}
    </div>
    <h2>Members:</h2>
    <div class="flex" id="members">
    {% for member in members %}
        <div>
            <h3>{{ member.name }}</h3>
            <img src="data/members/{{ member.image }}" width="100" height="100"/>
            <div class="flex socials">
                {% for so in member.socials %}
                <a href="{{ so.link }}" target="_blank">
                {% if so.name == "twitter" %}
                <i class="fa-brands fa-twitter"></i>
                {% elseif so.name == "youtube" %}
                <i class="fa-brands fa-youtube"></i>
                {% else %}
                <i class="fa-solid fa-globe"></i>
                {% endif %}
                </a>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}